{
  "compileOnSave": true,
  "include": [
    "src"
  ],
  "exclude": [
    "src/ai.ts",
    "src/genkit-sample.ts"
  ],
  "compilerOptions": {
    "module": "NodeNext",
    "noImplicitReturns": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "noUnusedLocals": false
  }
}