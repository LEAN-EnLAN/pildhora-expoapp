rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // ============================================================================
    // PRODUCTION SECURITY RULES
    // ============================================================================
    // These rules provide fine-grained access control for production use.
    // They ensure users can only access their own data and maintain proper
    // security boundaries between patients and caregivers.
    // ============================================================================

    // Users can read their own documents
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow caregivers to query users collection to find their assigned patients
    match /users {
      allow list: if request.auth != null &&
        request.query.role == 'patient' &&
        request.query.caregiverId == request.auth.uid;
    }
    
    // Medications rules - users can only access their own medications
    // This rule ensures proper medication CRUD operations without permission conflicts
    match /medications/{medicationId} {
      allow read, write: if request.auth != null &&
        (request.auth.uid == resource.data.patientId || request.auth.uid == resource.data.caregiverId);
      allow create: if request.auth != null &&
        (request.auth.uid == request.resource.data.patientId || request.auth.uid == request.resource.data.caregiverId);
    }
    
    // Tasks rules - users can access their own tasks
    match /tasks/{taskId} {
      allow read, write: if request.auth != null &&
        (request.auth.uid == resource.data.patientId || request.auth.uid == resource.data.caregiverId);
      allow create: if request.auth != null &&
        (request.auth.uid == request.resource.data.patientId || request.auth.uid == request.resource.data.caregiverId);
    }
    
    // Allow caregivers to query tasks collection for tasks assigned to them
    match /tasks {
      allow list: if request.auth != null &&
        request.query.caregiverId == request.auth.uid;
    }
    
    // Devices metadata and access control (query-friendly)
    match /devices/{deviceId} {
      allow read: if request.auth != null && request.auth.uid in resource.data.linkedUsers;
      // Linked users (patient or caregiver) can update desiredConfig only
      allow update: if request.auth != null &&
        request.auth.uid in resource.data.linkedUsers &&
        request.resource.data.diff(resource.data).changedKeys().hasOnly(['desiredConfig','updatedAt']);
      // Device docs should be created by backend functions only
      allow create, delete: if false;
    }

    // Device link documents for audit and queries
    match /deviceLinks/{linkId} {
      allow read: if request.auth != null &&
        (request.auth.uid == resource.data.userId || request.auth.uid == resource.data.createdBy);
      // Allow the authenticated user to create/update/delete their own link docs.
      // Support both request.resource (for create/merge updates) and resource (for existing docs).
      allow create: if request.auth != null &&
        (request.auth.uid == request.resource.data.createdBy || request.auth.uid == request.resource.data.userId);
      allow update: if request.auth != null && (
        request.auth.uid == request.resource.data.createdBy ||
        request.auth.uid == request.resource.data.userId ||
        request.auth.uid == resource.data.createdBy ||
        request.auth.uid == resource.data.userId
      );
      allow delete: if request.auth != null &&
        (request.auth.uid == resource.data.userId || request.auth.uid == resource.data.createdBy);
    }
  }
}
