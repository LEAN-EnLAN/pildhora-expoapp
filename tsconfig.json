{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "src/theme/**/*.ts",
    "src/utils/**/*.ts",
    "src/hooks/**/*.ts"
  ],
  "exclude": [
    "functions/**",
    "scripts/**",
    "tests/**"
  ]
}
